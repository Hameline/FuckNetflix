<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="privatemovie.gui.controller.MainViewController">
   <children>
      <HBox>
         <children>
            <Label prefHeight="41.0" prefWidth="482.0" text="Private Movie Collection">
               <HBox.margin>
                  <Insets left="5.0" />
               </HBox.margin>
            </Label>
            <ButtonBar prefHeight="41.0" prefWidth="492.0">
              <buttons>
                <Button fx:id="btnDeleteMovie" mnemonicParsing="false" onAction="#handleDeleteMovie" text="Delete Movie" />
                  <Button fx:id="btnUpdateMovie" mnemonicParsing="false" onAction="#handleUpdateMovie" text="Update Movie" />
                  <Button fx:id="btnUploadMovie" mnemonicParsing="false" onAction="#handleUploadMovie" text="Upload Movie" />
              </buttons>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
            </ButtonBar>
         </children>
      </HBox>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="719.0" prefWidth="984.0">
         <children>
            <TableView fx:id="tbwCategory" prefHeight="719.0" prefWidth="154.0">
              <columns>
                <TableColumn prefWidth="155.0" text="Category" />
              </columns>
            </TableView>
            <TableView fx:id="tbwMovie" onMouseClicked="#handleSelectedMovie" prefHeight="719.0" prefWidth="835.0">
              <columns>
                <TableColumn fx:id="tbwMovieIMDBRating" prefWidth="78.0" text="IMDB Rating" />
                <TableColumn fx:id="tbwMovieTitle" prefWidth="502.0" text="Movie Title" />
                  <TableColumn fx:id="tbwMoviePersonalRating" prefWidth="95.0" text="Personal Rating" />
                  <TableColumn prefWidth="157.0" text="Time Sinced Last watched" />
              </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</VBox>
