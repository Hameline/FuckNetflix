<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="background" prefHeight="245.0" prefWidth="224.0" stylesheets="@../css/CreateUpdateMovieView.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="privatemovie.gui.controller.CreateCategoryViewController">
    <children>
        <Label id="text" layoutX="14.0" layoutY="22.0" stylesheets="@../css/CreateUpdateMovieView.css" text="Category Details">
            <font>
                <Font name="Comic Sans MS Bold" size="24.0" />
            </font>
        </Label>
        <TextField id="field" fx:id="txtCategoryName" layoutX="14.0" layoutY="64.0" onKeyPressed="#handleAddAnotherCategory" prefHeight="25.0" prefWidth="194.0" promptText="Category Name" stylesheets="@../css/CreateUpdateMovieView.css" />
        <ComboBox fx:id="menuTotalCategories" layoutX="15.0" layoutY="96.0" onAction="#handleSelectedCategory" prefHeight="26.0" prefWidth="194.0" promptText="Total Categories" />
        <Button id="field" fx:id="btnCreate" layoutX="15.0" layoutY="144.0" mnemonicParsing="false" onAction="#handleCreate" prefHeight="25.0" prefWidth="194.0" stylesheets="@../css/CreateUpdateMovieView.css" text="Create" />
        <Button fx:id="btnCancel" layoutX="15.0" layoutY="196.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="25.0" prefWidth="194.0" text="Cancel" />
      <Button id="field" fx:id="btnDelete" layoutX="15.0" layoutY="171.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="25.0" prefWidth="194.0" stylesheets="@../css/CreateUpdateMovieView.css" text="Delete" />
    </children>
</AnchorPane>
