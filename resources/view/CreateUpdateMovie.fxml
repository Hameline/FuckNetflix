<AnchorPane id="background" prefHeight="372.0" prefWidth="190.0" stylesheets="@../css/CreateUpdateMovieView.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="privatemovie.gui.controller.CreateUpdateMovieViewController">
    <children>
        <Label id="text" layoutX="18.0" layoutY="22.0" stylesheets="@../css/CreateUpdateMovieView.css" text="Movie Details">
            <font>
                <Font name="Comic Sans MS Bold" size="24.0" />
            </font>
        </Label>
        <TextField id="field" fx:id="txtMovieName" layoutX="16.0" layoutY="64.0" prefHeight="25.0" prefWidth="160.0" promptText="Movie Name" stylesheets="@../css/CreateUpdateMovieView.css" />
        <TextField id="field" fx:id="txtIMBDScore" layoutX="16.0" layoutY="98.0" prefHeight="25.0" prefWidth="160.0" promptText="IMBD Score" stylesheets="@../css/CreateUpdateMovieView.css" />
        <TextField fx:id="txtFilePath" layoutX="18.0" layoutY="311.0" prefHeight="26.0" prefWidth="160.0" />
        <TextField id="field" fx:id="txtPersonalRating" layoutX="16.0" layoutY="131.0" prefHeight="25.0" prefWidth="160.0" promptText="Personal Rating" stylesheets="@../css/CreateUpdateMovieView.css" />
