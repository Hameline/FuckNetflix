        <ComboBox fx:id="menuTotalCategories" layoutX="18.0" layoutY="201.0" prefHeight="26.0" prefWidth="160.0" promptText="Total Categories" />
        <Button id="field" fx:id="chooseFIle" layoutX="19.0" layoutY="274.0" mnemonicParsing="false" onAction="#handleChooseFile" stylesheets="@../css/CreateUpdateMovieView.css" text="Choose File" />
        <Button fx:id="btnCancel" layoutX="127.0" layoutY="274.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
    </children>
